generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id               Int                   @id @default(autoincrement())
  nome             String
  email            String                @unique
  senha            String
  cargo            String                @default("usuario")
  instituicaoAtual Int?                  @default(0) // Alterado para Int com valor padr√£o 0
  aceitaPerto      Boolean?              @default(false)
  createdAt        DateTime              @default(now())
  updatedAt        DateTime              @updatedAt
  instituicao      InstituicaoDestino[]
}

model Instituicao {
  id        Int                   @id 
  nome      String?
  municipio String?
  uf        String?
  sigla     String?
  usuario   InstituicaoDestino[]
}

model InstituicaoDestino {
  id             Int          @id @default(autoincrement())
  usuarioId      Int
  instituicaoId  Int?
  instituicao    Instituicao? @relation(fields: [instituicaoId], references: [id])
  usuario        Usuario      @relation(fields: [usuarioId], references: [id])
}